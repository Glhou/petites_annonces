{% extends 'base.html.twig' %}

{% block content %}
    <h1>Connexion</h1>
    <form action="{{ path('security_login') }}" method="post">
        <div class="from-group">
            <input placeholder="Nom d'utilisateur" required type="text" class="form-control" name="_username">
            <input placeholder="Mot de passe" required type="password" class="form-control" name="_password">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success"> Connexion </button>
        </div>
    </form>
    <a href="{{ path('security_registration') }}">s'inscrire</a>
{% endblock %}