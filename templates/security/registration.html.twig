{% extends 'base.html.twig' %}

{% block content_login %}
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h1> Inscription </h1>
                </div>
                <div class="body">
                    {% form_theme form 'form.html.twig' %}
                    {{ form_start(form) }}

                    {{ form_row(form.username, {'label' : false, 'attr' : {'placeholder' : 'utilisateur'}}) }}
                    {{ form_row(form.email, {'label' : false, 'attr' : {'placeholder' : 'exemple@site.ex'}}) }}
                    {{ form_row(form.lastName, {'label' : false, 'attr' : {'placeholder' : 'nom'}}) }}
                    {{ form_row(form.firstName, {'label' : false, 'attr' : {'placeholder' : 'pr√©nom'}}) }}
                    {{ form_row(form.promo, {'label' : false, 'attr' : {'type': 'number' ,'placeholder' : 'promo'}}) }}
                    {{ form_row(form.password, {'label' : false, 'attr' : {'placeholder' : 'mot de passe'}}) }}
                    {{ form_row(form.confirm_password, {'label' : false, 'attr' : {'placeholder' : 'confirmez le mot de passe'}}) }}
                    <button type="submit" class="btn btn-block bg-pink" > Inscription</button>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}