{% extends 'base.html.twig' %}

{% block content_login %}

        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card ">
                    <div class="header">
                        <h1>logo du GInfo</h1>
                    </div>
                    <div class="body">
                        <form action="{{ path('security_login') }}" method="post">
                            <div class="from-group">
                                <input placeholder="Nom d'utilisateur" required type="text" class="form-control" name="_username">
