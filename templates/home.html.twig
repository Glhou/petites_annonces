{% extends 'base.html.twig' %}

{% block content_login %}

        <div class="row clearfix">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card ">
                    <div class="header">
                        <h1>logo du GInfo</h1>
                    </div>
                    <div class="body">
                        <form action="{{ path('security_login') }}" method="post">
                            <div class="from-group">
                                <input placeholder="Nom d'utilisateur" required type="text" class="form-control" name="_username">
                                <input placeholder="Mot de passe" required type="password" class="form-control" name="_password">
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn bg-purple waves-effect"> Connexion </button>
                            </div>
                        </form>
                        <a class="btn btn-default waves-effect" href="{{ path('security_registration') }}" class="nav-link">s'inscrire</a>
                    </div>
                    <a class="btn btn-block btn-lg bg-pink waves-effect" href="{{ path('user_login') }}">Se connecter via My</a>
                </div>
            </div>
        </div>

{% endblock %}