{% extends "base.html.twig" %}

{% block content %}
    <div class="row">
        {# block gauche #}
        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
            <div class="card">
                <div class="header">
                    <h4>
                        Mes dernières annonces
                    </h4>
                </div>
                <div class="body">
                    {% for annonce in AdUser %}
                        {% include 'annonces/_annonce.html.twig' %}
                    {% endfor %}
                </div>
            </div>
        </div>


        {# Listing au milieu #}
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
            <div class="card">
                <div class="header">
                    <div class="row">
                        <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
                            <h3>Dernières annonces</h3>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                            <a href=" {{ path("annonces") }}" class="btn btn-block bg-pink">Toutes les annonces</a>
                        </div>
                    </div>
                </div>
                <div class="body">
                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs tab-nav-right" role="tablist">
                        <li role="presentation" class="active"><a href="#tout" data-toggle="tab">Tout</a>
                        </li>
                        <li role="presentation"><a href="#objet-touve" data-toggle="tab">Objet Trouvé</a>
                        </li>
                        <li role="presentation"><a href="#objet-perdu" data-toggle="tab">Objet Perdu</a></li>
                        <li role="presentation"><a href="#vente" data-toggle="tab">Vente</a></li>
                        <li role="presentation"><a href="#recherche" data-toggle="tab">Recherche</a></li>
                        <li role="presentation"><a href="#tips" data-toggle="tab">Tips</a></li>
                    </ul>

                    <!-- Tab panes -->

                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane fade in active" id="tout">

                            {% for annonce in AdAll %}
                                {% include 'annonces/_annonce.html.twig' %}
                            {% endfor %}

                        </div>
                        <div role="tabpanel" class="tab-pane fade in active" id="objet-touve">

                            {% for annonce in Ad1 %}
                                {% include 'annonces/_annonce.html.twig' %}
                            {% endfor %}

                        </div>
                        <div role="tabpanel" class="tab-pane fade" id="objet-perdu">

                            {% for annonce in Ad2 %}
                                {% include 'annonces/_annonce.html.twig' %}
                            {% endfor %}

                        </div>
                        <div role="tabpanel" class="tab-pane fade" id="vente">

                            {% for annonce in Ad3 %}
                                {% include 'annonces/_annonce.html.twig' %}
                            {% endfor %}

                        </div>
                        <div role="tabpanel" class="tab-pane fade" id="recherche">

                            {% for annonce in Ad4 %}
                                {% include 'annonces/_annonce.html.twig' %}
                            {% endfor %}

                        </div>
                        <div role="tabpanel" class="tab-pane fade" id="tips">

                            {% for annonce in Ad5 %}
                                {% include 'annonces/_annonce.html.twig' %}
                            {% endfor %}

                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# block droite #}

        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
            <div class="card">
                <div class="header">
                    <a class="btn btn-block btn-lg bg-pink waves-effect" style="margin-bottom: 3vh"
                       href="{{ path('new_annonce') }}">Nouvelle annonce</a>
                </div>
                <div class="body">
                    <div class="info-box-2 bg-purple hover-expand-effect">
                        <div class="icon">
                            <i class="material-icons">book</i>
                        </div>
                        <div class="content">
                            <div class="text">Annonces</div>
                            <div class="number">{{ CountAll }}</div>
                        </div>
                    </div>
                    <div class="info-box-2 bg-deep-purple hover-expand-effect">
                        <div class="icon">
                            <i class="material-icons">done</i>
                        </div>
                        <div class="content">
                            <div class="text">Annonces résolues</div>
                            <div class="number">{{ CountResolved }}</div>
                        </div>
                    </div>
                    <div class="info-box-2 bg-indigo hover-expand-effect">
                        <div class="icon">
                            <i class="material-icons">clear</i>
                        </div>
                        <div class="content">
                            <div class="text">Annonces non résolues</div>
                            <div class="number">{{ CountUnresolved }}</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}