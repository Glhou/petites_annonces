{% extends 'base.html.twig' %}

{% block content %}
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card" >
                <div class="header">
                    <h3>{{ title }}</h3>
                </div>
                <div class="body">
                    {% form_theme form 'form.html.twig' %}
                    {{ form_start(form) }}
                    <b>Type d'annonce</b>
                    {{ form_row(form.type,{'label' : false}) }}
                    <b>Résolu ?</b>
                    {{ form_row(form.resolved,{'label' : false}) }}
                    {{ form_row(form.title,{'label' : false, 'attr' : {'placeholder' : 'Titre'}}) }}
                    {{ form_row(form.description,{'label' : false, 'attr' : {'placeholder' : 'Description de l\'annonce'}}) }}
                    {{ form_row(form.location,{'label' : false, 'attr' : {'placeholder' : 'Où ça se passe / s\'est passé'}}) }}

                    <button type="submit" class="btn bg-pink" style="margin: 10px"> {{ button_text }} </button>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}